{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./build"
    },
    "include": ["src/*", "src/commands/*"],
    "exclude": ["node_modules"]
}