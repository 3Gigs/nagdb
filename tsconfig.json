{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./build",
        "experimentalDecorators": true,
        "moduleResolution": "Node",
    },
    "include": ["nagdb/**/*", "nagdb/*", "Web_Server", "Web_Server/**/* Web_Server/*"],
    "exclude": ["node_modules", "docs"]
}